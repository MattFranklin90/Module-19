{
    "extends": "../client/tsconfig.json",
    "compilerOptions": {
      "types": ["cypress", "node", "react"],
      "target": "ES2020",
      "module": "ESNext",
      "jsx": "react-jsx", 
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": [
      "src",
      "client/**/*.tsx",
      "cypress/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }